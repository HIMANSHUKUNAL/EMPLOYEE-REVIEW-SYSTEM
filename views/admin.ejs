<link rel="stylesheet" href="/css/admin.css">
<div class="container-fluid mt-2">
    <h4 class="heading">Assign Recipent Employee and reviewer Employee</h4>
    <div class="reviewContainer">

        <div class="reviewer">

            <div class="text-center">
                <h5>Assign Task!</h5>

            </div>
            <hr>
            
              

            <form action="/admin/setReviewes" method="POST" class="mt-1 card-body">
                <div>
                    <h5>Set Reviewer</h5> 
                    <select class="form-select form-select-lg mb-3" aria-label="Default select example" name="sender">
                        <option selected>Sender</option>
                        <% for(let i = 0; i<employe.length ; i++){ %>
                            
                            <option value= <%= employe[i].id %> > <%= employe[i].name %> </option>
                            
                        <%}%>    
                    </select>
                </div>

                <div class="reviewee">
                    <h5>Select the recipent Employee</h5>
                    <select class="form-select form-select-lg mb-3" aria-label="Default select example" name="reciver">
                        <option selected>Reciver</option>
                        <% for(let i = 0; i<employe.length ; i++){ %>
                        
                            <option value= <%= employe[i].id %> > <%= employe[i].name %> </option>
                            
                        <%}%>
                    </select>
                </div>

                <div class="submitButtons">
                    <button type="submit">Submit</button>
                </div>
            </form>

        </div>
    </div>

    <div class="reviewContainer">
        <div class="reviewer">
            <div>
                <h5 class="text-center">Make Admin to any Employee</h5>
            </div>
            <hr>
    
            <form method="POST" action="/admin/newAdmin" class="mt-3">
                <select class="form-select form-select-lg mb-3" aria-label="Default select example" name="selectedUser">
                    <option selected>Select to make Admin</option>
                    <% for(let i = 0; i<employe.length ; i++){ %>
                        
                        <option value= <%= employe[i]._id %> > <%= employe[i].name %> </option>
                        
                    <%}%>
                </select>
    
                <div class="submitButtons">
                    <button type="submit">Submit</button>
                </div>
    
            </form>
        </div>
    </div>
</div>